@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>

    <form class="flexbox" asp-action="CreateFood" asp-controller="Foods" method="POST">
        <h2>Create a food item.</h2>
        <input type="text" name="name" placeholder="Name..."> </br>
        <input type="number" name="calorie" placeholder="Calorie..."> </br>
        <button class="submitButton" type="submit">Create</button>
    </form>

    </br>

    <div class="grid">
        <div class="flexbox" style="grid-column: span 4; height: auto;"><h2 style="display: inline-block;">Foods</h2></div>
        @foreach (var food in ViewBag.Foods)
        {
            <div class="flexbox" style="height: auto">
                <p>@food.Name</p>
                <form asp-action="Details" asp-controller="Pages" method="GET">
                    <input type="hidden" name="id" value="@food.Id"/>
                    <button class="smallButton" type="submit">View</button>
                </form>
                <form asp-action="Edit" asp-controller="Pages" method="GET">
                    <input type="hidden" name="id" value="@food.Id"/>
                    <button class="smallButton" type="submit">Update</button>
                </form>
                <form asp-action="DeleteFood" asp-controller="Foods" method="POST">
                    <input type="hidden" name="id" value="@food.Id"/>
                    <button class="smallButton" type="submit">Delete</button>
                </form>
            </div>
        }
    </div>

</body>
</html>