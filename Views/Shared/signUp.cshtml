@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>

    <form class="flexbox" asp-action="SignUp" asp-controller="Identity" method="POST">
        <h1>Sign Up</h1>
        <input type="text" name="userName" placeholder="Username..."/>
        <input type="text" name="email" placeholder="Email..."/>
        <input type="text" name="password" placeholder="Password..."/>
        <input type="text" name="firstName" placeholder="Firstname..."/>
        <input type="text" name="lastName" placeholder="Lastname..."/>
        <input type="text" name="gender" placeholder="Gender..."/>
        <input type="number" name="height" placeholder="Height cm..."/>
        <input type="number" name="weight" placeholder="Weight in kg..."/>
        <button class="submitButton" type="submit">Sign Up</button>
        @if(ViewBag.result != null) {
        @foreach(var error in ViewBag.result) {
        <p>@(error.Description)</p>
        }}
    </form>

</body>
</html>