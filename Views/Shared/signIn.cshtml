@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/style.css"/>
</head>
<body>

    <div class="flexbox" style="height: 50vh;">
        <form class="flexbox" style="height: auto;" asp-action="SignIn" asp-controller="Identity" method="POST">
            <h1>Nutrient Tracking App</h1>
            <input type="text" name="username" placeholder="username..."/>
            <input type="text" name="password" placeholder="password..."/>
            <button class="submitButton" type="submit">Sign In</button>
            @if(ViewBag.result != null) 
            {
            <p>@(ViewBag.result)</p>
            }
        </form>
        <form class="flexbox" style="height: auto;" asp-action="SignUp" asp-controller="Pages" method="GET">
            <button class="smallButton" type="submit">Sign Up</button>
        </form>
    </div>

</body>
</html>